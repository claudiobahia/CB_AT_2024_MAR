@model List<LivroViewModel>;
@{
    ViewData["Title"] = "Biblioteca de Livros";
}

<div class="container mt-5">
    <h1 class="text-center mb-5">@ViewData["Title"]</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var livro in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@livro.imagem" class="card-img-top" alt="Imagem do Livro">
                    <div class="card-body">
                        <h5 class="card-title">@livro.nome</h5>
                        <p class="card-text">@livro.descricao</p>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="card-text text-muted">Última atualização: @livro.ultimaatt</p>
                            <div class="btn-group" role="group">
                                <a asp-controller="Capitulo" asp-action="LerCapitulo" asp-route-livroId="@livro.id" class="btn btn-primary">
                                    Ler
                                </a>
                                <a asp-controller="Capitulo" asp-action="LerCapitulos" asp-route-livroId="@livro.id" class="btn btn-primary">
                                    Favoritar
                                </a>
                                <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="visually-hidden">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a asp-controller="Livro" asp-action="ApagarLivro" asp-route-livroId="@livro.id" class="dropdown-item">Deletar</a></li>
                                    @*<li><a asp-controller="Livro" asp-action="EditarLivro" asp-route-livroId="@livro.id" class="dropdown-item">Editar</a></li>
                                    *@
                                    <li><a asp-controller="Capitulo" asp-action="AdicionarCapitulo" asp-route-livroId="@livro.id" class="dropdown-item">Adicionar Capítulo</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

